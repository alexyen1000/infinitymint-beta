{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"strict": false,
		"allowJs": true,
		"rootDirs": ["./scripts", "./test", "./app", "./gems", "./deploy"],
		"paths": {
			"@app/*": ["./app/*"]
		},
		"esModuleInterop": true
	},
	"exclude": [
		"./dist",
		"./node_modules",
		"./gems/__",
		"./gems/__cache",
		"./gems/@"
	],
	"include": ["./test", "./src", "./scripts", "./app", "./deploy", "./gems"],
	"files": ["./hardhat.config.ts", "./index.ts"]
}
