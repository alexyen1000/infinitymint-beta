{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"strict": false,
		"allowJs": true,
		"rootDirs": ["./test", "./app"],
		"paths": {
			"@app/*": ["./app/*"]
		},
		"listFiles": true,
		"esModuleInterop": true
	},
	"exclude": [
		"./dist",
		"./node_modules",
		"./gems/__",
		"./gems/__cache",
		"./gems/@"
	],
	"include": [
		"./test",
		"./scripts",
		"./app",
		"./deploy",
		"./gems",
		"./examples",
		"./projects",
		"./typechain-types"
	],
	"files": ["./hardhat.config.ts", "./index.ts"]
}
