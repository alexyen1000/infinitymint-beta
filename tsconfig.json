{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"allowJs": true,
		"rootDirs": [
			"./src",
			"./scripts",
			"./test",
			"./app",
			"./gems",
			"./deploy"
		],
		"paths": {
			"@app/*": ["./app/*"]
		},
		"esModuleInterop": true
	},
	"exclude": ["dist", "node_modules"],
	"include": ["./test", "./src", "./scripts", "./app", "./gems", "./deploy"],
	"files": ["./hardhat.config.ts", "./infinitymint.config.ts", "./index.ts"]
}
