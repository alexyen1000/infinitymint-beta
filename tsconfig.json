{
	"compilerOptions": {
		"target": "ES2015",
		"module": "NodeNext",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"strict": false,
		"allowJs": true,
		"rootDirs": ["./app"],
		"skipLibCheck": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"paths": {
			"@app/*": ["./app/*"],
			"@typechain-types/*": ["./typechain-types/*"]
		},
		"esModuleInterop": true
	},
	"exclude": [
		"dist",
		"dist/tests",
		"node_modules",
		"gems/__",
		"gems/__cache",
		"gems/@"
	],
	"include": [
		"./app",
		"./tests",
		"./gems",
		"./scripts",
		"./deploy",
		"./imports",
		"./examples",
		"./typechain-types",
		"./index.ts",
		"./tests"
	],
	"files": ["./hardhat.config.ts", "./index.ts", "./examples/example.env.ts"]
}
