{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "build",
		"strict": false,
		"allowJs": true,
		"rootDirs": ["./app"],
		"paths": {
			"@app/*": ["./app/*"]
		},
		"esModuleInterop": true
	},
	"exclude": [
		"build",
		"node_modules",
		"gems/__",
		"gems/__cache",
		"gems/@",
		"projects"
	],
	"include": [
		"./app",
		"./scripts",
		"./deploy",
		"./examples",
		"./typechain-types"
	],
	"files": ["./hardhat.config.ts", "./index.ts"]
}
