{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"strict": false,
		"allowJs": true,
		"rootDirs": ["./app"],
		"paths": {
			"@app/*": ["./app/*"]
		},
		"esModuleInterop": true
	},
	"exclude": [
		"dist",
		"node_modules",
		"gems/__",
		"gems/__cache",
		"gems/@",
		"projects"
	],
	"include": [
		"./app",
		"./gems",
		"./scripts",
		"./deploy",
		"./imports",
		"./examples",
		"./typechain-types",
		"./index.ts"
	],
	"files": ["./hardhat.config.ts", "./index.ts"]
}
